Stmt 	::= (NEWLINE* Equals* NEWLINE*)*
Expr    ::= Or ('|' Or)*
Or      ::= AtomExpr+

AtomExpr::= Atom [Trailer] 
Atom    ::= Str | Name | '[' Expr ']' | '(' Expr ')' 



Equals ::= Name LitDef Str | Name Def Expr

Trailer::= '*' | '+' | '{' Number{1 2} '}'

Def    := '::='
LitDef := ':='
Str    := R'"[\w|\W]*?"'
Name   := R'[a-zA-Z_][a-zA-Z0-9]*'
Number := R'\d+'
NEWLINE:= '\n'
