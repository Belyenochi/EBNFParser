Stmts    ::= [TokenIgnore | TokenDef] Equals*;

TokenIgnore ::= 'Ignore' '{' (Name|Str)* '}';

TokenDef ::= 'Token' (Name | Codes);

Equals   ::= Name ':='  Str + ';' |
             Name [Throw] '::=' Expr ';';

Throw    ::= 'Throw' '[' (Name | Str)* ']';

Expr     ::= Or ('|' Or)*;

Or       ::= AtomExpr+;

AtomExpr ::= Atom Trailer*;

Atom     ::=  Str         |
              Name        |
              '(' Expr ')'|
              '[' Expr ']';
Trailer  ::= '*' | '+' | '{' Number{1 2} '}';


